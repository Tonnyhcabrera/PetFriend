<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarVacuna">


    <ImageView
        android:id="@+id/ima_vacuna"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_vacuna" />

    <EditText
        android:id="@+id/nombre_vacuna"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="Ingresa el nombre de tu mascota"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ima_vacuna" />


    <TextView
        android:id="@+id/fecha_vacuna"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:hint="Fecha de VacunaciÃ³n"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/nombre_vacuna"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/nombre_vacuna"
        app:layout_constraintTop_toBottomOf="@+id/nombre_vacuna" />

    <TextView
        android:id="@+id/prox_vacuna"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:hint="Proxima Vacuna"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/fecha_vacuna"
        app:layout_constraintTop_toBottomOf="@+id/fecha_vacuna" />

    <ImageButton
        android:id="@+id/prox_Vacuna_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:clickable="true"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toEndOf="@+id/prox_vacuna"
        app:layout_constraintTop_toBottomOf="@+id/nombre_vacuna"
        app:srcCompat="@drawable/ico_calend"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/vacu_fecha_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:src="@drawable/ico_calend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toEndOf="@+id/fecha_vacuna"
        app:layout_constraintTop_toBottomOf="@+id/nombre_vacuna"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/agregarMascota"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="52dp"
        android:clickable="true"
        android:src="@drawable/ico_save"
        app:layout_constraintEnd_toEndOf="@+id/prox_vacuna"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/prox_vacuna"
        app:layout_constraintTop_toBottomOf="@+id/prox_vacuna"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>